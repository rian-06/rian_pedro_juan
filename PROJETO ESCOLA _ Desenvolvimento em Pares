programa {
  funcao inicio() {
    cadeia nome[50]
    real nota1[50]
    real nota2[50]
    real nota3[50]
    real nota4[50]
    real media[50]
    para(inteiro i = 0; i <= 49; i++){
      escreva("Digite o nome do aluno/a ",i + 1,": ")
      leia(nome[i])
      limpa()
      escreva("Quanto o ",nome[i]," tirou no bimestre 1: ")
      leia(nota1[i])
      limpa()
      escreva("Quanto o ",nome[i]," tirou no bimestre 2: ")
      leia(nota2[i])
      limpa()
      escreva("Quanto o ",nome[i]," tirou no bimestre 3: ")
      leia(nota3[i])
      limpa()
      escreva("Quanto o ",nome[i]," tirou no bimestre 4: ")
      leia(nota4[i])
      limpa()
      media[i]= (nota1[i] + nota2[i] + nota3[i] + nota4[i])/4
    }
    para(inteiro j = 0; j <= 49; j++){
      escreva(nome[j]," est� com ",media[j]," de m�dia.\n")
    }
  }
}
